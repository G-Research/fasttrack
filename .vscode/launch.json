    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch server (postgres)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "server",
                "--log-level",
                "debug",
                "--database-uri",
                "postgres://postgres:postgres@localhost:5432/another?sslmode=disable"
            ]
        },
        {
            "name": "Launch server (sqlite memory)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "server",
                "--log-level",
                "debug",
                "--database-uri",
                "sqlite://fasttrack.db?mode=memory&cache=shared"
            ]
        },
        {
            "name": "Launch server (sqlite file)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "server",
                "--log-level",
                "debug",
                "--database-uri",
                "sqlite://fasttrack.db"
            ]
        },
        {
            "name": "Launch server (encrypted sqlite file)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "server",
                "--log-level",
                "debug",
                "--database-uri",
                "sqlite://encrypted.db?_key=passphrase"
            ]
        }
    ]
}